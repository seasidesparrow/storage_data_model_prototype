{
  "title": "Affiliations",
  "description": "Data schema for Affiliation data",
  "type": "object",
  "properties": {
    "aff": {
      "type": "array",
      "description": "Raw affiliation strings from canonical",
      "items": {
        "type": "string"
      }
    },
    "aff_uuid": {
      "type": "string",
      "description": "Source record UUID for aff"
    },
    "aff_abbrev": {
      "type": "array",
      "description": "Canonical abbrevs for aff if available",
      "items": {
        "type": "string"
      }
    },
    "aff_canonical": {
      "type": "array",
      "description": "Canonical names for aff if available",
      "items": {
        "type": "string"
      }
    }, 
    "aff_id": {
      "type": "array",
      "description": "Canonical ids for aff if available",
      "items": {
        "type": "string"
      }
    }, 
    "aff_facet": {
      "type": "array",
      "description": "Faceted list of canonical abbrevs",
      "items": {
        "type": "string"
      }
    },
    "aff_facet_hier": {
      "type": "array",
      "description": "Facet heirarchy of canonical abbrevs if available",
      "items": {
        "type": "string"
      }
    },
    "institution": {
      "type": "array",
      "description": "Faceted names for aff if available",
      "items": {
        "type": "string"
      }
    },
    "aff_country": {
      "type": "array",
      "description": "Country for canonical id if available",
      "items": {
        "type": "string"
      }
    },
    "aff_country_facet": {
      "type": "array",
      "description": "Faceted list of canonical id countries",
      "items": {
        "type": "string"
      }
    },
    "aff_country_facet_hier": {
      "type": "array",
      "description": "Facet heirarchy of canonical id countries",
      "items": {
        "type": "string"
      }
    },
    "author": {
      "type": "array",
      "description": "List of author names",
      "items": {
        "type": "string"
      }
    },
    "author_uuid": {
      "type": "string",
      "description": "Source record UUID for author"
    }
  },
  "additionalProperties": false
}
